# PyPolyCall Configuration
# Port mapping for host:container
port=3001:8084
server_type=python
workspace=/opt/polycall/services/python
log_level=info
max_connections=100

# Server capabilities
supports_diagnostics=true
supports_completion=true
supports_formatting=true

# Performance settings
max_memory=512M
timeout=30

# Security settings
allow_remote=false
require_auth=true
