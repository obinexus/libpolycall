{
  "$schema": "https://obinexus.com/schemas/dop-adapter-v2.0.json",
  "version": "2.0.0",
  "project": "libpolycall-v2-aegis",
  "compliance": {
    "cryptographic_standard": "OBINexus-v1.0",
    "nasa_std": "8739.8",
    "zero_overhead_marshalling": true,
    "formal_verification": true
  },
  
  "global_settings": {
    "telemetry": {
      "enabled": true,
      "silent_observation": true,
      "guid_tracking": true,
      "metrics_interval_ms": 1000,
      "audit_trail": true
    },
    "security": {
      "zero_trust": true,
      "cryptographic_validation": "mandatory",
      "isolation_default": "container",
      "audit_logging": "secure_hash_refs"
    },
    "performance": {
      "zero_overhead_guarantee": true,
      "delta_compression": true,
      "state_sync_mode": "deterministic",
      "cache_optimization": true
    }
  },

  "component_registry": {
    "bankcard_component": {
      "type": "python",
      "isolation": "strict",
      "security_level": "banking",
      "resource_limits": {
        "memory_limit_mb": 64,
        "cpu_time_limit_ms": 5000,
        "io_operations_limit": 100,
        "network_connections": 0
      },
      "cryptographic_policy": {
        "primitive_validation": "RSA-2048,AES-256,SHA256",
        "pattern_enforcement": true,
        "canonical_mapping": true
      },
      "state_validation": {
        "enable_schema_enforcement": true,
        "schema_file": "schemas/bankcard.schema.json",
        "state_delta_validation": true
      },
      "bridge_config": "python_bridge_bankcard.json"
    },

    "ads_service": {
      "type": "node",
      "isolation": "paranoid",
      "security_level": "untrusted",
      "resource_limits": {
        "memory_limit_mb": 8,
        "cpu_time_limit_ms": 2000,
        "io_operations_limit": 10,
        "network_connections": 1
      },
      "cryptographic_policy": {
        "primitive_validation": "AES-128,SHA256",
        "pattern_enforcement": true,
        "canonical_mapping": true
      },
      "state_validation": {
        "enable_schema_enforcement": true,
        "schema_file": "schemas/ads.schema.json",
        "state_delta_validation": true
      },
      "bridge_config": "node_bridge_ads.json"
    },

    "react_frontend": {
      "type": "react",
      "isolation": "sandbox",
      "security_level": "client",
      "resource_limits": {
        "memory_limit_mb": 128,
        "cpu_time_limit_ms": 10000,
        "io_operations_limit": 500,
        "network_connections": 5
      },
      "cryptographic_policy": {
        "primitive_validation": "ECC-P256,SHA256",
        "pattern_enforcement": true,
        "canonical_mapping": true
      },
      "state_validation": {
        "enable_schema_enforcement": true,
        "schema_file": "schemas/react_component.schema.json",
        "state_delta_validation": true
      },
      "bridge_config": "react_bridge.json"
    },

    "wasm_module": {
      "type": "wasm",
      "isolation": "vm",
      "security_level": "isolated",
      "resource_limits": {
        "memory_limit_mb": 32,
        "cpu_time_limit_ms": 3000,
        "io_operations_limit": 0,
        "network_connections": 0
      },
      "cryptographic_policy": {
        "primitive_validation": "Lattice-LWE,SHA256",
        "pattern_enforcement": true,
        "canonical_mapping": true
      },
      "state_validation": {
        "enable_schema_enforcement": true,
        "schema_file": "schemas/wasm.schema.json",
        "state_delta_validation": true
      },
      "bridge_config": "wasm_bridge.json"
    }
  },

  "automation": {
    "polycall_file": {
      "enabled": true,
      "auto_register": true,
      "cli_mapping": true,
      "production_mode": true
    },
    "command_mapping": {
      "folder_scan": true,
      "auto_discovery": true,
      "binding_generation": true
    }
  },

  "protocol_separation": {
    "communication_layer": "pypolycall/protocol",
    "function_layer": "bindings",
    "driver_layer": "drivers",
    "separation_enforced": true
  },

  "binding_layers": {
    "python": {
      "package": "pypolycall",
      "protocol_path": "pypolycall/protocol",
      "server_file": "server.py",
      "binding_type": "driver"
    },
    "node": {
      "package": "nodepolycall", 
      "protocol_path": "nodepolycall/protocol",
      "server_file": "server.js",
      "binding_type": "driver"
    },
    "golang": {
      "package": "gopolycall",
      "protocol_path": "gopolycall/protocol",
      "server_file": "server.go",
      "binding_type": "driver"
    },
    "java": {
      "package": "javapolycall",
      "protocol_path": "javapolycall/protocol", 
      "server_file": "Server.java",
      "binding_type": "driver"
    }
  },

  "recovery_policy": {
    "bounded_delta_replay": true,
    "checkpoint_interval": 1000,
    "cryptographic_integrity": true,
    "recovery_algorithm": "Algorithm1_CryptographicSafeStateRecovery"
  },

  "audit_compliance": {
    "nasa_std_8739_8": true,
    "security_audit_trail": "secure_pattern_hash_refs",
    "deterministic_execution": true,
    "formal_verification": true,
    "graceful_degradation": true
  }
}
