{
  "$schema": "https://obinexus.com/schemas/bridge-config-v2.0.json",
  "bridge_version": "2.0.0",
  "language": "python",
  "binding_type": "driver",
  
  "runtime_config": {
    "python_version": "3.11+",
    "interpreter": "python3",
    "virtual_env": "required",
    "package_manager": "pip",
    "server_file": "server.py"
  },

  "protocol_separation": {
    "protocol_module": "pypolycall.protocol",
    "communication_layer": "pypolycall/protocol/marshalling.py",
    "state_sync": "pypolycall/protocol/state_manager.py",
    "cryptographic_layer": "pypolycall/protocol/crypto_handler.py",
    "bypass_protocol": false
  },

  "ffi_interface": {
    "version": "2.0",
    "allowed_methods": [
      "dop_adapter_init",
      "dop_adapter_invoke", 
      "dop_adapter_get_state",
      "dop_adapter_reset",
      "dop_adapter_destroy"
    ],
    "method_binding": "ctypes",
    "library_path": "libpolycall_dop.so"
  },

  "resource_limits": {
    "default_memory_mb": 64,
    "max_memory_mb": 256,
    "default_cpu_time_ms": 5000,
    "max_cpu_time_ms": 30000,
    "max_threads": 4,
    "max_file_descriptors": 32,
    "network_isolation": "container"
  },

  "security_policy": {
    "isolation_level": "container",
    "allow_subprocess": false,
    "allow_network": false,
    "allow_filesystem_write": false,
    "cryptographic_validation": "mandatory",
    "state_validation": true
  },

  "component_specific_configs": {
    "bankcard_component": {
      "module": "bankcard.server",
      "class": "BankCardServer", 
      "security_level": "banking",
      "isolation": "strict",
      "memory_limit_mb": 64,
      "cpu_time_limit_ms": 5000,
      "network_access": false,
      "file_access": "read_only",
      "required_packages": [
        "cryptography>=41.0.0",
        "pydantic>=2.0.0",
        "pypolycall>=2.0.0"
      ]
    },
    
    "data_processor": {
      "module": "data.server",
      "class": "DataProcessorServer",
      "security_level": "standard", 
      "isolation": "sandbox",
      "memory_limit_mb": 128,
      "cpu_time_limit_ms": 10000,
      "network_access": true,
      "file_access": "read_write",
      "required_packages": [
        "pandas>=2.0.0",
        "numpy>=1.24.0",
        "pypolycall>=2.0.0"
      ]
    }
  },

  "telemetry": {
    "enabled": true,
    "silent_observation": true,
    "metrics": [
      "memory_usage",
      "cpu_time", 
      "invocation_count",
      "error_rate",
      "response_time"
    ],
    "export_format": "prometheus",
    "guid_tracking": true
  },

  "error_handling": {
    "graceful_degradation": true,
    "error_isolation": true,
    "recovery_mechanism": "bounded_delta_replay",
    "max_retry_attempts": 3,
    "timeout_escalation": true
  },

  "development_tools": {
    "debug_mode": false,
    "profiling": false,
    "hot_reload": false,
    "code_coverage": false
  },

  "automation": {
    "auto_discovery": true,
    "cli_integration": true,
    "polycall_file_support": true,
    "folder_mapping": {
      "scan_pattern": "**/*server.py",
      "auto_register": true,
      "namespace_detection": true
    }
  },

  "state_management": {
    "state_validation": true,
    "schema_enforcement": true,
    "delta_compression": true,
    "checkpoint_interval": 1000,
    "recovery_enabled": true
  }
}
